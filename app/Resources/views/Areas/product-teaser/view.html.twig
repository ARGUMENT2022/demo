<section class="jumbotron bg-light text-center">
    <div class="container">
        <h2 class="jumbotron-heading">{{ pimcore_input('productTeaserTitle', {'placeholder':'Enter Title'}) }}</h2>
        <div class="row mb-3 text-left">
            {% for i in pimcore_iterate_block(pimcore_block('teaserblock',{class:'row'})) %}
                <div class="col-md-4">
                    {{
                        pimcore_renderlet('productTeaser', {
                            type: 'object',
                            editmode: editmode,
                            controller: 'Product',
                            action: 'productTeaser',
                            title: 'Drag a product here',
                            height : 'auto',
                            width: '20vw',
                        })
                    }}
                </div>
            {% endfor %}
        </div>
    </div>
</section>