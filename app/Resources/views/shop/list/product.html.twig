<div class="card custom-product-card mb-4 shadow-sm">
    {% if(product.mainImage) %}
        {{ product.mainImage.thumbnail('grid').html({style: 'width: 100%; height: auto'}) | raw }}
    {% endif %}

    {% set manufacturerName = ( product.manufacturer ? product.manufacturer.name : '')%}
    {% set bodyStyleName = ( product.bodyStyle ? product.bodyStyle.name ~ ', ' : '')%}

    <div class="card-body pricing">
        <h4 class="card-title pricing-card-title text-uppercase">{{ manufacturerName ~ ' ' ~ product.name(language) }}</h4>
        <p class="card-text">{{ product.series ~ ', ' ~ bodyStyleName  ~ product.productionYear }}</p>
        <p class="card-price">â‚¬ {{ product.price|round(2,'floor') }},-</p>
        <div class="row">
            <div class="col-6 pr-1">
                <a href="#" class="btn btn-block btn-secondary">Details</a>
            </div>
            <div class="col-6 pl-1">
                <a href="{{ path('shop-add-to-cart', { id: product.id }) }}" class="btn btn-block btn-primary">Kaufen <i class=" ml-2"><img src="/static/images/icons/cart.svg" height="20" width="auto"></i></a>
            </div>
        </div>
    </div>
</div>