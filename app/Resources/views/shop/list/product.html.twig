<div class="card custom-product-card mb-4 shadow-sm">
    {% if(product.mainImage) %}
        {{ product.mainImage.thumbnail('grid').html({style: 'width: 100%; height: auto'}) | raw }}
    {% endif %}


    <div class="card-body pricing">
        <h4 class="card-title pricing-card-title text-uppercase">{{ product.oSName }}</h4>
        <p class="card-text">Cabrio 1200 34PS, Original</p>
        <p class="card-price">{{ product.oSPrice }},-</p>
        <div class="row">
            <div class="col p-1">
                <a href="#" class="btn btn-block btn-secondary">Details</a>
            </div>
            <div class="col p-1">
                <a href="{{ path('shop-add-to-cart', { id: product.id }) }}" class="btn btn-block btn-primary">Kaufen <i class=" ml-2"><img src="/static/images/icons/cart.svg" height="20" width="auto"></i></a>
            </div>
        </div>
    </div>
</div>
