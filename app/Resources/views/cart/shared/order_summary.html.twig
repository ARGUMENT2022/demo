<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="">{{ 'checkout.summary' | trans }}</span>
    <span class="badge badge-secondary badge-pill">{{ cart.itemAmount }}</span>
</h4>
<ul class="list-group mb-3">
    <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
            <h6 class="my-0">{{ 'checkout.products' | trans }}</h6>
            <small class="text-muted">{{ 'checkout.products.subtext' | trans }}</small>
        </div>
        <span class="text-muted">{{ cart.priceCalculator.subTotal }}</span>
    </li>

    {% for name, modification in cart.priceCalculator.priceModifications %}

        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0">{{ ('checkout.modificator.' ~ name) | trans}}</h6>
            </div>
            <span class="text-muted">{{ modification }}</span>
        </li>


    {% endfor %}

    <li class="list-group-item d-flex justify-content-between" style="border-top: 2px solid">
        <strong><span>{{ 'checkout.totalprice' | trans }}</span></strong>
        <strong>{{ cart.priceCalculator.grandTotal }}</strong>
    </li>
</ul>